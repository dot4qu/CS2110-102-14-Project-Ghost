<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ghosthunter_background"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SplashScreen" >
    
     <ImageView
        android:id="@+id/ghostbuster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="270dp"
        android:src="@drawable/ghostbuster" />
   	
     <ImageView
         android:id="@+id/bat"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginTop="114dp"
         android:layout_marginLeft="200dp"
         android:src="@drawable/bat" />

    <Button
        android:id="@+id/up_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106dp"
        android:text="Up" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/up_button"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/up_button"
        android:text="Right" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/right_button"
        android:layout_toLeftOf="@+id/down_button"
        android:text="Left" />

    <Button
        android:id="@+id/down_button"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/right_button"
        android:layout_toLeftOf="@id/right_button"
        android:text="Down" />

    
    <TextSwitcher
        android:id="@+id/textSwitcher2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="36dp"
        android:layout_toRightOf="@+id/right_button" >
    </TextSwitcher>

</RelativeLayout>
